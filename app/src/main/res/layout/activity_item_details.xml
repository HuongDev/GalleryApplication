<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".details.ItemDetailsActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white">

        <ImageButton android:layout_width="56dp"
                     android:layout_height="56dp"
                     android:background="@android:color/transparent"

                     android:src="@drawable/ic_back"/>


    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/black_50">


        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"/>

        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:text="Macbook Pro 2015"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:drawablePadding="10dp"
                  android:textStyle="bold"
                  android:textColor="@color/white"

                  android:drawableStart="@drawable/ic_badge"/>

    </FrameLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/photoView" android:layout_width="match_parent" android:layout_height="match_parent"/>

        <vn.com.huong.galleryapplication.custom.PhotoViewIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_margin="32dp"
        android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</LinearLayout>