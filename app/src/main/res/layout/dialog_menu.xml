<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/imageClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_close_black_24dp"
            android:visibility="visible"
            android:contentDescription="@string/text_close" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/choose_an_option"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/imageAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textTitle"
                android:contentDescription="@string/text_add" />

            <TextView
                android:id="@+id/textAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_add"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@id/imageAdd"
                app:layout_constraintStart_toEndOf="@id/imageAdd"
                app:layout_constraintTop_toTopOf="@id/imageAdd" />

            <ImageView
                android:id="@+id/imageEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageAdd"
                android:contentDescription="@string/text_edit" />

            <TextView
                android:id="@+id/textEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_edit"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@id/imageEdit"
                app:layout_constraintStart_toEndOf="@id/imageEdit"
                app:layout_constraintTop_toTopOf="@id/imageEdit" />

            <ImageView
                android:id="@+id/imageDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_remove_black_24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textEdit"
                android:contentDescription="@string/text_delete" />

            <TextView
                android:id="@+id/textDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_delete"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@id/imageDelete"
                app:layout_constraintStart_toEndOf="@id/imageDelete"
                app:layout_constraintTop_toTopOf="@id/imageDelete" />
        </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>